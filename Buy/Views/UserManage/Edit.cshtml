@model Buy.Models.ApplicationUser

@{
    ViewBag.Title = "编辑代理";
    Layout = "~/Views/Shared/_LayoutBackground.cshtml";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("用户管理", "Index", "UserManage")</li>
    <li class="active">编辑代理</li>
</ol>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label class="control-label col-md-2" for="PhoneNumber">电话号码</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="UserName">用户名</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NickName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
            </div>
        </div>

        @switch (Model.UserType)
        {
            case Buy.Enums.UserType.Normal:
                break;
            case Buy.Enums.UserType.System:
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleGroupID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.RoleGroupID, (SelectList)ViewBag.SelRole, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoleGroupID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
                break;
            default:
                {
                    <div class="form-group">
                        <div class="col-md-2">
                            <input type="checkbox" class="pull-right" id="productProxy_ck" value="" />
                        </div>
                        <div class="col-md-10">
                            参加活动？
                        </div>
                    </div>
                    <div class="hidden productProxy">
                        <div class="form-group">
                            <label class="control-label col-md-2">商品</label>
                            <div class="col-md-10">
                                <select id="productProxy_sel" class="form-control">
                                    <option class="demo" value=""></option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">享受全返个数</label>
                            <div class="col-md-10">
                                <input type="number" id="productProxy_max" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
                }
                break;
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="edit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts{
    @Scripts.Render("~/bundles/userMange")
}