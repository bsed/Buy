@model Buy.Models.RegisterViewModel
@{
    ViewBag.Title = "注册";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div id="register" class="account paddingT44 minHight100vh">
        <div class="navigationBar">
            <div class="navigationBar-back" onclick="history.back(-1)"></div>
            注册
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger hidden", @id = "errorText" })
        <div class="paddingLr16">
            <div class="account-input">
                <div class="account-input-tits">手机号码</div>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "register-input", @placeholder = "请填写手机号码" })
                @*<div class="account-input-getCode" id="btnGetCode">获取验证码</div>*@
                <input id="btnGetCode" class="identifyCode" type="button" value="获取验证码" />
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger hidden" })
                <div name="clearVal" class="account-input-del style02 hidden"></div>
            </div>
            <div id="vercode" class="account-input hidden">
                <div class="account-input-tits">图片验证码</div>
                <input id="txtVercode" type="text" class="register-input" placeholder = "填写验证码获取短信验证码" value="" maxlength = 4  />
                <img id="imgVerCode" class="account-vercode" src="@Url.Action("VerCode")" />
            </div>
            <div class="account-input">
                <div class="account-input-tits">验证码</div>
                @Html.TextBoxFor(m => m.Code, new { @class = "style02 register-input", @placeholder = "请填写验证码" })
                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger hidden" })
                <div name="clearVal" class="account-input-del hidden"></div>
            </div>
            <div class="account-input">
                <div class="account-input-tits">密码</div>
                @Html.PasswordFor(m => m.Password, new { @class = "style02 register-input", @placeholder = "请填写密码" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger hidden" })
                <div name="clearVal" class="account-input-del hidden"></div>
            </div>
            <div class="marginT35">
                <input id="registerBtn" type="button" disabled class="account-button" value="注册" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/register")
}
