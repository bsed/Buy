@model Buy.Models.UserSetting

@{
    ViewBag.Title = "修改信息";
}

<div class="userEdit account minHight100vh paddingT44">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="navigationBar">
            <div class="navigationBar-back" onclick="history.back(-1)"></div>
            <div class="navigationBar-tits">修改昵称 / 头像</div>
            <div class="navigationBar-rightText" id="submit">完成</div>
        </div>

        <div class="paddingLr16 marginT35">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="account-input">
                <div class="account-input-tits">昵称</div>
                @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "style02", @placeholder = "请填写昵称" } })
                <div name="clearVal" class="account-input-del"></div>
            </div>

            <div class="moduleOptions style02 marginT20">
                头像
                <div class="editImg">@Html.EditorFor(model => model.Avatar)</div>
            </div>
        </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/userEdit")
}
